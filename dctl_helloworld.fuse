-- Read file in to a string
function readAll(file)
    file = FC_DIR.."\\"..file
    local f = assert(io.open(file, "rb"))
    local content = f:read("*all")
    f:close()
    return content
end

SolidKernel = readAll("shadertoys\\tmpKernel")

